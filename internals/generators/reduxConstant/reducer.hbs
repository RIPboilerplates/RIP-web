    {{#if isAsync}}
    case {{ constantCase actionName }}_PENDING:
      return state
        .set('fetching', true)
        .set('fetched', false)
        .set('error', null)
    case {{ constantCase actionName }}_FULFILLED:
      return state
        .set('fetching', false)
        .set('fetched', true)
        .set('error', null)
    case {{ constantCase actionName }}_REJECTED:
      return state
        .set('fetching', false)
        .set('fetched', true)
        .set('error', action.payload)
    {{else}}
    case {{ constantCase actionName }}:
      return state
        .set('value', action.payload)
    {{/if}}
